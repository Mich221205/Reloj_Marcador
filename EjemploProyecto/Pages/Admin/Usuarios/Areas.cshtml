@page "{id:int}"
@model EjemploProyecto.Pages.Admin.Usuarios.AreasModel
@{
    ViewData["Title"] = "Áreas por funcionario";
}

<h2>Áreas del funcionario: @Model.Usuario?.Nombre @Model.Usuario?.Apellido_1 (@Model.Usuario?.Identificacion)</h2>

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<input type="hidden" asp-for="Id" />

<h3>Asociadas</h3>

@if (!Model.Asociadas.Any())
{
    <div class="alert alert-info">El funcionario no tiene áreas asociadas.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Área</th>
                <th style="width:140px">Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.Asociadas)
            {
                <tr>
                    <td>@a.Nombre_Area</td>
                    <td>
                        <form method="post" asp-page-handler="Remove" asp-route-id="@Model.Id" asp-route-idArea="@a.ID_Area"
                              onsubmit="return confirm('¿Eliminar asociación?');" class="d-inline">
                            <button class="btn btn-sm btn-danger" type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<h3>Asociar nueva área</h3>

@if (!Model.Disponibles.Any())
{
    <div class="alert alert-warning">No hay áreas disponibles para asociar.</div>
}
else
{
    <form method="post" asp-page-handler="Add" asp-route-id="@Model.Id" class="d-flex gap-2 align-items-end">
        <div>
            <label class="form-label">Área</label>
            <select class="form-select" style="max-width:320px" name="idArea" required>
                <option value="">-- Seleccione --</option>
                @foreach (var a in Model.Disponibles)
                {
                    <option value="@a.ID_Area">@a.Nombre_Area</option>
                }
            </select>
        </div>
        <button class="btn btn-primary" type="submit">Asociar</button>
    </form>
}

<p class="mt-3">
    <a class="btn btn-secondary" asp-page="Index">Volver a Usuarios</a>
</p>
