@page
@model EjemploProyecto.Pages.Admin.Usuarios.CreateModel
@{
    ViewData["Title"] = "Nuevo usuario";
}

<h2>Nuevo usuario</h2>

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<form method="post" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-6">
        <label asp-for="Input.ID_Tipo_Identificacion" class="form-label"></label>
        <select asp-for="Input.ID_Tipo_Identificacion"
                asp-items="Model.TiposSelectList" class="form-select">
            <option value="">-- Seleccione --</option>
        </select>
        <span asp-validation-for="Input.ID_Tipo_Identificacion" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Input.Identificacion" class="form-label"></label>
        <input asp-for="Input.Identificacion" class="form-control" />
        <span class="form-text">Este valor será su nombre de usuario.</span>
        <span asp-validation-for="Input.Identificacion" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Input.Nombre" class="form-label"></label>
        <input asp-for="Input.Nombre" class="form-control" />
        <span asp-validation-for="Input.Nombre" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Input.Apellido" class="form-label"></label>
        <input asp-for="Input.Apellido" class="form-control" />
        <span asp-validation-for="Input.Apellido" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Input.Correo" class="form-label"></label>
        <input asp-for="Input.Correo" class="form-control" />
        <span asp-validation-for="Input.Correo" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Input.Password" class="form-label"></label>
        <input asp-for="Input.Password" type="password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Input.ID_Rol_Usuario" class="form-label"></label>
        <select asp-for="Input.ID_Rol_Usuario"
                asp-items="Model.RolesSelectList" class="form-select">
            <option value="">-- Seleccione --</option>
        </select>
        <span asp-validation-for="Input.ID_Rol_Usuario" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Input.Estado" class="form-label"></label>
        <select asp-for="Input.Estado" class="form-select">
            <option value="true">Activo</option>
            <option value="false">Inactivo</option>
        </select>
        <span asp-validation-for="Input.Estado" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
